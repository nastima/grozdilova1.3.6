{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["vitest/globals"]
  },
  "include": ["src", "vite.config.ts", "**/*.test.ts", "**/*.test.tsx"]
}
